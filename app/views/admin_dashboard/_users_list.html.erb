<table class='table table-bordered table-striped responsive-table'>
  <thead class="blue-text text-darken-4">
  <tr>
    <th>Name</th>
    <th>Id</th>
    <th>Email</th>
    <th>Saldo</th>
    <th>Referidos</th>
    <th>Estado</th>
    <th># Donaciones</th>
    <th># Solicitudes</th>
    <th>Fecha Registro</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody class="anchorFixcolor hoverTable">
    <% users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= number_with_precision( user.saldo, precision: 3)  %></td>
        <td><a href="#" data-toggle="modal" data-target='#myModal<%= user.id %>'>Ver Referidos</a></td>
        <td>Activo</td>
        <td><%= user.donations.count %></td>
        <td><%= user.requests.count %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= link_to 'Details', user_show_path(user) %></td>
        <td><%= link_to 'Editar usuario', edit_user_registration_path(user) %></td>
      </tr>
      <div class="modal fade" id='myModal<%= user.id %>' role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><%= user.email%>
                <br>
                Padre: <%= user.get_father%>
              </h4>
            </div>
            <h4 class="modal-title"><b>Nivel Uno </b></h4>
            <div class="modal-body">
              <h4 class="modal-title"><%= user.descendants_email(1)%></h4>
            </div>
            <h4 class="modal-title"><b>Nivel Dos</b></h4>
            <div class="modal-body">
              <h4 class="modal-title"><%= user.descendants_email(2)%></h4>
            </div>
            <h4 class="modal-title"><b>Nivel Tres</b></h4>
            <div class="modal-body">
              <h4 class="modal-title"><%= user.descendants_email(3)%></h4>
            </div>
            <h4 class="modal-title"><b>Nivel Cuatro</b></h4>
            <div class="modal-body">
              <h4 class="modal-title"><%= user.descendants_email(4)%></h4>
            </div>
            <h4 class="modal-title"><b>Nivel Cinco</b></h4>
            <div class="modal-body">
              <h4 class="modal-title"><%= user.descendants_email(5)%></h4>
            </div>
            <h4 class="modal-title"><b>Nivel Seis</b></h4>
            <div class="modal-body">
              <h4 class="modal-title"><%= user.descendants_email(6)%></h4>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </tbody>
</table>