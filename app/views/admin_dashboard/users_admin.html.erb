  <nav class="own-navbar">
    <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#" style="font-size: 18px;color: #606060;line-height: 20px;">Users Administration</a>
        </div>
    </div>
  </nav>


  <div class="blog-area bg-light blog-page"> 
    <div class="col-md-12">
        <div class="pt-20 text-center" style="margin-top:15px;">

          <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>

            <div class= "row">
              <div class= "col-md-4 col-md-offset-2">
                <label> Buscar nombre o email</label>
                <%= f.text_field(
                  :search_name, placeholder: "Buscar nombre o email") %>
              </div>
              <div class= "col-md-4">
                
                <label> Buscar por código</label>
                <%= f.text_field(
                  :with_id, placeholder: "Buscar por código") %>
              </div>
            </div>
            <div  class= "row">
              <div class="col-md-4 col-md-offset-2">
                <%= f.submit 'Filter', class: "btn btn-success"%>
              </div>
              <div class= "col-md-4">
              
                <%= link_to(
                  'Reset filters',
                  reset_filterrific_url,
                class:"btn btn-success" ,style:"color:#fff;margin-top:5px;") %>
             
                
              </div>
            </div>
          <% end %>

            
  
          <div class="donations-container"> 
          
                 <%= render(partial: 'users_list', locals: { users: @users }) %>
                 <%= will_paginate @users %>
          </div>


        </div>       
    </div>    
  </div>

 

