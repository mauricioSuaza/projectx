  <nav class="own-navbar">
    <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#" style="font-size: 18px;color: #606060;line-height: 20px;">Donations administration</a>
        </div>
    </div>
  </nav>


  <div class="blog-area bg-light blog-page"> 
    <div class="col-md-12">
        <div class="pt-20 text-center" style="margin-top:20px;">

          <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>

            <div class= "row">
              <div class= "col-md-4 ">
                <label> Buscar por c√≥digo</label>
                <%= f.text_field(
                  :with_id, placeholder: "Buscar codigo") %>
              </div>
              <div class= "col-md-4">
                
                <label> Valor mayor a</label>
                <%= f.number_field(
                  :value_greater_than, placeholder: "valor mayor a") %>
              </div>
              <div class= "col-md-4">
                
                <label> Valor menor a</label>
                <%= f.number_field(
                  :value_lower_than, placeholder: "valor menor a") %>
              </div>
            </div>
            <div class= "row">
              <div class= "col-md-6 ">
                <label> Buscar por nombre usuario</label>
                <%= f.text_field(
                  :with_user_name, placeholder: "Buscar nombre") %>
              </div>
              <div class= "col-md-6">
                <label> Buscar por email de usuario</label>
                <%= f.text_field(
                  :with_user_email, placeholder: "Buscar email") %>
              </div>
            </div>

            <div  class= "row">
              <div class="col-md-4 col-md-offset-2">
                <%= f.submit 'Buscar', class: "btn btn-success"%>
              </div>
              <div class= "col-md-4">
              
                <%= link_to(
                  'Reset filters',
                  reset_filterrific_url,
                class:"btn btn-success" ,style:"color:#fff;margin-top:5px;") %>
             
                
              </div>
            </div>
          <% end %>

          <div class="donations-container"> 
          
                 <%= render(partial: 'donations_list', locals: { donations: @donations }) %>
                 <%= will_paginate @donations %>
          </div>


        </div>       
    </div>    
  </div>

 

