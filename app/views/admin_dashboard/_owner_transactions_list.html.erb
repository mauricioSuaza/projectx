                <table class='table table-bordered table-striped responsive-table'>
                    <thead class="blue-text text-darken-4">
                    <tr>
                        <th>Code</th>
                        <th>Value</th>
                        <th>Status</th>
                        <th>Sender</th>
                        <th>Donation</th>
                        <th>Receipt</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th colspan="3"></th>
                    </tr>
                    </thead>
                    <tbody class="anchorFixcolor hoverTable">
                    
                        <% transactions.each do |trans| %>
                            <tr>
                                <% @sender = User.find(trans.sender_id) %>
                                <% @receiver = User.find(trans.receiver_id) %>
                                <% @donation = Donation.find(trans.donation_id) %>
                                

                                <td><%= trans.id %></td>
                                <td><%=  trans.value%></td>
                                <% if trans.status %>
                                    <td>completed</td>
                                <% else %>
                                    <td>incomplete</td>
                                <% end %>
                                <td><%= link_to @sender.name, user_show_path(@sender.id) %></td>
                                
                                <td><%= link_to @donation.id, user_show_path(@donation.id) %></td>
                                
                                <% if trans.invoice.url.present? %>
                                    <td><%= link_to 'invoice', trans.invoice.url %></td>
                                <%else%>
                                    <td>Recibo no enviado</td>
                                <%end%>
                                <% if trans.status %>
                                    <td>Transaction already confirmed</td>
                                <%elsif trans.completed ==  "canceled"%>
                                    <td>Esta transaccion fue cancelada</td> 
                                <%else%>
                                    <td>Pending</td> 
                                <%end%>
                                <td><%= trans.created_at.to_date %></td>
                                <td><%= button_to chats_path(sender_id: current_user.id, recipient_id: trans.sender_id), class: 'btn btn-primary' do %>
                                    <i class="fa fa-weixin" aria-hidden="true"></i>
                                    Message
                                <%end%>
                                </td>
                                <% if trans.status %>
                                    <td>Esta transaccion ya se confirmo</td>
                                <%elsif trans.completed ==  "canceled"%>
                                    <td> <%= link_to "Confirmar asi este cancelada", transaction_confirm_path(transaction_id: trans.id), method: :get,  data: { confirm: 'Are you sure?' } %></td>
                                <%else%>
                                   <td> <%= link_to "Confirm transaction", transaction_confirm_path(transaction_id: trans.id), method: :get,  data: { confirm: 'Are you sure?' } %></td>
                                <%end%>
                                
                                <td><%= link_to 'Details', transaction_show_path(trans) %></td>
                            </tr>
                        <% end %>
                   
                    </tbody>
                </table>


