  <div class="container-fluid" style="margin-top:30px;">
    <div class="col-md-12">
        <div class="text-center">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field own-field">
             <label> Nombre</label>
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field own-field">
             <label> Telefono</label>
            <%= f.text_field :phone, autofocus: true %>
          </div>

          <div class="field own-field">
             <label> Monedero</label>
            <%= f.text_field :btc, autofocus: true %>
          </div>

          <div class="field own-field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field own-field">
            <div class="">
              <%= f.label :password %>
              <i>(Dejar en blanco si no se desea cambiar)</i>
            </div>
            <%= f.password_field :password, autocomplete: "off" %>
            <% if @minimum_password_length %>
              <br/>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field own-field">
            <label> Confirmaci√≥n de password</label>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="field own-field">
            <label> Password actual</label> <i>(Necesitamos tu password actual para confirmar los cambios)</i><br/>
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class:"own-submit" %>
          </div>
        <% end %>
        </div>

        <div class="" style="margin: 50px 0px;">
          <h3>Cancelar mi cuenta</h3>
          <p>Deseas cancelar tu cuenta? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"own-btntwo" %></p>
          <i class="fa fa-angle-double-left" aria-hidden="true" style="margin: 20px 0px; font-size: 20px; color: #6d9e01;"><%= link_to "Back", :back %></i>
        </div>

    </div>
  </div>
