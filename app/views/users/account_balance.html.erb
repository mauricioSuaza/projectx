  <div class="container-fluid">
    <div class="">
        <div class="text-center">

        <div class="donations-container" style="margin-top:0px;">
          <div class="iconImage">
            <img src="/images/donation2.svg" alt="" style="width: 25%;">
          </div>
          <h1 class="DonationsTitle">Donations</h1>
                <table class='table table-hover table-striped responsive-table' style="margin-top: 30px;">
                    <thead class="blue-text text-darken-4">
                    <tr>
                        <th>Donation</th>
                        <th>Value</th>
                        <th>Status</th>
                        <th>Date</th>
                        <!-- <th colspan="3"></th> -->
                    </tr>
                    </thead>

                    <tbody class="anchorFixcolor hoverTable">
                    <% @donations.each do |donation| %>

                    <%color_font = 'font_colortwo'%>
                    <%if donation.status%>
                       <%color_font = 'font_color'%>
                    <%end%>

                        <tr>
                            <td>
                              <div class="cardId">
                               DG<%= donation.id %>
                              </div>
                            </td>
                            <td><%= donation.value %></td>
                            <td class="<%=color_font%>"><%= donation.status %></td>
                            <td><%= donation.created_at.to_date %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>

        </div>


        <div class="donations-container">
          <div class="iconImage">
            <img src="/images/hand.svg" alt="" style="width: 25%;">
          </div>
            <h1 class="DonationsTitle">Requests</h1>
            <table class='table table-hover responsive-table'>
                    <thead class="blue-text text-darken-4">
                    <tr>
                        <th>Donation</th>
                        <th>Value</th>
                        <th>Status</th>
                        <th>Date</th>
                        <!-- <th colspan="3"></th> -->
                    </tr>
                    </thead>

                    <tbody class="anchorFixcolor hoverTable">
                    <% @requests.each do |request| %>

                    <%color_fontR = 'font_colortwo'%>
                    <%if request.status%>
                       <%color_fontR = 'font_color'%>
                    <%end%>
                        <tr>
                            <td>
                              <div class="cardId">
                                RQ<%= request.id %>
                              </div>
                            </td>
                            <td><%= request.value %></td>
                            <td class="<%=color_fontR%>"><%= request.status %></td>
                            <td><%= request.created_at.to_date %></td>
                         </tr>
                    <% end %>
                    </tbody>
            </table>

        </div>

        </div>
    </div>
  </div>
